@using BlazorServerCrud1.Data.Settings
@using CosmosDBData
@using BlazorServerCrud1.Components.ProductComponents
@using BlazorServerCrud1.Components.PaginatorComponent
@using System.Diagnostics
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

@inject ICosmosDBContext cosmosDB;
@inject NavigationManager navManager;
@inject ISettingsService settings;
@inject ProtectedLocalStorage localStorage;


<Paginator OnSelectPage=OnSelectPage OnSelectPageSize=OnSelectPageSize SelectedPage=SelectedPage TotalNumberOfItems=totalNumberOfItems ItemsPerPage=ItemsPerPage >
    

    <h3>@SearchWord</h3>
    


    <button @onclick='()=>{tokenSource.Cancel();Debug.WriteLine("Cancel");}' >cancel</button>

                     
      


    <div class="container-fluid">
        <div class="row">
    @foreach (var product in Items)
    {
    

        <ProductCard id=@product.Id class="product-card" Name=@product.Name Type=@product.Type>
            <ProductImage Image=@product.Image style="height:50%; text-align:center;">

            </ProductImage>
        
            <ProductTitle style="background-color:green;">
                @product.Name           

            </ProductTitle>
            <ProductPrice>
                @product.Price @product.PriceUnit
            </ProductPrice> 
            Type: @product.Type
        </ProductCard>
          
    
    }
    </div>
    </div>

 
</Paginator>





